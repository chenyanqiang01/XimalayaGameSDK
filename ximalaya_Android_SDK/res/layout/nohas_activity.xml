<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="215dp"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo3" />

    
    <ImageView 
        android:id="@+id/iv_cancel"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/cancel3"
        android:layout_alignParentRight="true"
        />
    
    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:drawableLeft="@drawable/ic_login_username"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:hint="邮箱或者手机号"
        android:imeOptions="actionNext"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#c8c8c8"
        android:textSize="12sp" />

    <View 
        android:layout_height="0.5dp"
        android:layout_width="280dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#E8E8E8"
        android:layout_below="@+id/username"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:drawableLeft="@drawable/ic_login_password"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:hint="输入6–16位数字或字母"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:password="true"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#c8c8c8"
        android:textSize="12sp" />
    <TextView 
        android:id="@+id/tv_forget_pwd"
        android:layout_alignTop="@+id/password"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/username"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="忘记密码？"
        android:textSize="12sp"
        android:textColor="@drawable/login_btn_text_color"
        />
     <View 
        android:layout_height="0.5dp"
        android:layout_width="280dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#E8E8E8"
        android:layout_below="@+id/password"
        />
    <View
        android:id="@+id/horizontal_divider"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/register"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@id/password"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/horizontal_divider"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="注册"
        android:textColor="@drawable/login_btn_text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@id/password"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/horizontal_divider"
        android:background="@drawable/login_highlight_btn_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>