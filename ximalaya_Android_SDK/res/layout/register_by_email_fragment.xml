<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/tel_split"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_86tel"
        android:background="@null"
        android:drawableLeft="@drawable/email2x"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:hint="请输入您的邮箱地址"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#c8c8c8"
        android:textSize="12sp" />

    <View
        android:id="@+id/tel_username_split"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:background="#E8E8E8" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/tel_username_split"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableLeft="@drawable/ic_login_password"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:hint="输入6–16位数字或字母"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:password="true"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#c8c8c8"
        android:textSize="12sp" />

    <View
        android:id="@+id/tel_password_split"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:background="#E8E8E8" />

    <TextView
        android:id="@+id/tv_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tel_password_split"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_argeement"
        android:drawablePadding="5dp"
        android:text="本人已阅读并同意"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/argeement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tel_password_split"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/tv_agree"
        android:text="注册协议"
        android:textColor="@color/orange"
        android:textSize="12sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/argeement"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_highlight_btn_bg"
        android:gravity="center"
        android:text="提交注册"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>
