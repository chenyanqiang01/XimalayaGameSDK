<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_tel_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="验证码已通过短信发送至您的手机"
        android:textColor="#999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_telnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tel_code"
        android:layout_marginTop="5dp"
        android:text="186***6666"
        android:textColor="#999"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_telnum"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawablePadding="7dp"
        android:gravity="center_vertical"
        android:hint="请输入您的验证码"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:singleLine="true"
        android:textColor="#333333"
        android:textColorHint="#c8c8c8"
        android:textSize="12sp" />

    <View
        android:id="@+id/tel_username_split"
        android:layout_width="140dp"
        android:layout_height="0.5dp"
        android:layout_below="@+id/username"
        android:background="#E8E8E8" />

    <TextView
        android:id="@+id/tv_send_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_telnum"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"
        android:text=""
        android:textColor="#FC5832"
        android:textSize="12sp" />

     <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_highlight_btn_bg"
        android:gravity="center"
        android:text="提交注册"
        android:textColor="#ffffff"
        android:textSize="16sp" />
    
    
    
    
    
    
    
    
    
    
    
</RelativeLayout>